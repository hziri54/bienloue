// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  nom      String
  email    String  @unique
  password String
  role     String

  baux     Bail[]
}

model Logement {
  id           Int     @id @default(autoincrement())
  titre        String
  adresse      String
  surface      Float
  loyerMensuel Float

  baux         Bail[]   // <- relation inverse
}

model Bail {
  id           Int     @id @default(autoincrement())
  signe        Boolean @default(false)
  dateDebut    DateTime
  dateFin      DateTime?

  logementId   Int
  logement     Logement @relation(fields: [logementId], references: [id])

  locataireId  Int
  locataire    User     @relation(fields: [locataireId], references: [id])
}
