// ----- CONFIGURATION DE LA DB -----
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ----- GENERATION DU CLIENT PRISMA -----
generator client {
  provider = "prisma-client-js"
}

// ----- MODELE DES UTILISATEURS -----
model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  role         String        @default("tenant") // "tenant" ou "landlord"
  applications Application[] // un locataire peut faire plusieurs demandes
}

// ----- MODELE DES BIENS IMMOBILIERS -----
model Property {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  price        Int
  address      String
  city         String
  surface      Int?          // surface en m2 (optionnelle pour lâ€™instant)
  createdAt    DateTime      @default(now())
  images       Image[]       // relation avec les images
  applications Application[] // les candidatures sur ce bien
}

// ----- MODELE DES CANDIDATURES -----
model Application {
  id         Int      @id @default(autoincrement())
  message    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId Int
}

// ----- MODELE DES IMAGES -----
model Image {
  id         Int      @id @default(autoincrement())
  url        String
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId Int
}
